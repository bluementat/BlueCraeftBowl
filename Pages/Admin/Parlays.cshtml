@page
@model BlueCraeftBowl.Pages.Admin.ParlaysModel
@{
    ViewData["Title"] = "Parlay Management";
}

<div class="container mt-4">
    <h2>Parlay Management</h2>
    
    <div class="card my-4">
        <div class="card-header">Add New Parlay Item</div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="NewItem.Question" class="form-label">Question</label>
                    <input asp-for="NewItem.Question" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label asp-for="NewItem.Type" class="form-label">Type</label>
                    <select asp-for="NewItem.Type" class="form-select" id="typeSelect">
                        <option value="AB">A/B Choice</option>
                        <option value="OverUnder">Over/Under</option>
                    </select>
                </div>
                <div id="abOptions">
                    <div class="mb-3">
                        <label asp-for="NewItem.OptionA" class="form-label">Option A</label>
                        <input asp-for="NewItem.OptionA" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewItem.OptionB" class="form-label">Option B</label>
                        <input asp-for="NewItem.OptionB" class="form-control" />
                    </div>
                </div>
                <div id="ouOptions" style="display:none;">
                    <div class="mb-3">
                        <label asp-for="NewItem.Threshold" class="form-label">Threshold Value</label>
                        <input asp-for="NewItem.Threshold" type="number" step="0.5" class="form-control" />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Add Item</button>
            </form>
        </div>
    </div>

    <h3>Existing Parlays</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Question</th>
                <th>Type</th>
                <th>Details</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Question</td>
                    <td>@item.Type</td>
                    <td>
                        @if (item.Type == BlueCraeftBowl.Models.ParlayType.AB)
                        {
                            <span>@item.OptionA vs @item.OptionB</span>
                        }
                        else
                        {
                            <span>O/U @item.Threshold</span>
                        }
                    </td>
                    <td>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        document.getElementById('typeSelect').addEventListener('change', function() {
            if (this.value === 'AB') {
                document.getElementById('abOptions').style.display = 'block';
                document.getElementById('ouOptions').style.display = 'none';
            } else {
                document.getElementById('abOptions').style.display = 'none';
                document.getElementById('ouOptions').style.display = 'block';
            }
        });
    </script>
}
